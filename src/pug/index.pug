        // Modal
        #contactModal.modal.fade(tabindex="-1", aria-labelledby="contactModalLabel", aria-hidden="true")
            .modal-dialog.modal-dialog-centered.modal-lg
                .modal-content.p-5
                    .modal-header
                        a.close(type="button", data-bs-dismiss="modal", aria-label="Close")
                        h1.mb-4#contactModalLabel.modal-title Talk to Entalpic
                    .modal-body
                        //- p#modal-mission We are on a mission to reduce the carbon emissions of industrial chemistry processes with smarter and greener materials with our proprietary generative AI platform.
                        form#contactForm.form-signup.mb-5(action="https://formspree.io/f/xknddljy", method="POST")

                            .row.input-group-newsletter.justify-content-center
                                .col-md-12.col-lg-6.pb-4
                                    input#emailAddress.form-control(
                                        type='email',
                                        placeholder='Email address',
                                        aria-label='Email address',
                                        name="email",
                                        required=true,
                                    )
                                .col-md-12.col-lg-6.pb-4
                                    input#nameInput.form-control(
                                        type="text",
                                        placeholder="Name",
                                        aria-label="Name",
                                        name="name",
                                        required
                                    )
                                .col-md-12.col-lg-9.pb-4.pb-lg-0
                                    textarea#textInput.form-control(
                                        type="text",
                                        placeholder="Message for us",
                                        aria-label="Message for us",
                                        name="message",
                                        required,
                                        rows=1,
                                    )
                                .col-lg-3.col-6.d-flex.justify-content-center
                                    button#submitButton.btn.btn-secondary.disabled(type='submit')
                                        |Send
                                        i.far.fa-paper-plane

                        .row.gx-4.gx-lg-5.d-flex.justify-content-center.mt-5
                            a.text-white#hireButton(href="https://entalpic.notion.site/Entalpic-is-hiring-9f29b9a69fb840508cd3f9a7c1c0d057", target="_blank",rel="noopener noreferrer")
                                |We are hiring
                                i.fas.fa-square-up-right
                        .row.gx-4.gx-lg-5.justify-content-center.mt-5
